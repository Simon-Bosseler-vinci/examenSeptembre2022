<Window x:Class="examenSeptembre2022.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <!-- Template pour les produits -->
        <DataTemplate x:Key="listboxTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding ProductId}" Margin="5,0"/>
                <TextBlock Text="{Binding ProductName}" Margin="5,0"/>
            </StackPanel>
        </DataTemplate>

        <!-- Template pour les ventes -->
        <DataTemplate x:Key="listSales">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding ProductName}" Margin="5,0"/>
                <TextBlock Text="{Binding TotalSales}" Margin="5,0"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="10">
        <!-- Définition des lignes du Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <!-- Liste des produits -->
            <RowDefinition Height="1*"/>
            <!-- Détails des produits -->
            <RowDefinition Height="1*"/>
            <!-- Liste des ventes -->
        </Grid.RowDefinitions>

        <!-- Liste des produits -->
        <Border Grid.Row="0" Margin="5" BorderBrush="Gray" BorderThickness="1">
            <ListBox
                Name="Products"
                ItemsSource="{Binding ProductList}"
                ItemTemplate="{StaticResource listboxTemplate}"
                SelectedItem="{Binding SelectedProduct}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>
        </Border>

        <!-- Détails des produits -->
        <Border Grid.Row="1" Margin="5,10,5,0" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Labels -->
                <Label Content="ProductID" Grid.Row="0" Grid.Column="0" Margin="5"/>
                <Label Content="ProductName" Grid.Row="1" Grid.Column="0" Margin="5"/>
                <Label Content="SupplierContactName" Grid.Row="2" Grid.Column="0" Margin="5"/>
                <Label Content="QuantityPerUnit" Grid.Row="3" Grid.Column="0" Margin="5"/>

                <!-- Champs -->
                <TextBlock Name="ProductID"
                           Text="{Binding SelectedProduct.ProductId}"
                           Grid.Row="0" Grid.Column="1"
                           Margin="5"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>

                <TextBlock Name="ProductName"
                           Text="{Binding SelectedProduct.ProductName}"
                           Grid.Row="1" Grid.Column="1"
                           Margin="5"
                           VerticalAlignment="Center"/>

                <TextBlock Name="ContactName"
                           Text="{Binding SelectedProduct.ContactName}"
                           Grid.Row="2" Grid.Column="1"
                           Margin="5"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>

                <TextBlock Name="QuantityPerUnit"
                           Text="{Binding SelectedProduct.QuantityPerUnit}"
                           Grid.Row="3" Grid.Column="1"
                           Margin="5"
                           VerticalAlignment="Center"/>

                <!-- Bouton Maj -->
                <Button Content="Maj"
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Right"
                        Margin="5"
                        Command="{Binding UpdateCommand}"/>
            </Grid>
        </Border>

        <!-- Liste des ventes -->
        <Border Grid.Row="2" Margin="5" BorderBrush="Gray" BorderThickness="1">
            <ListBox
                Name="SalesList"
                ItemsSource="{Binding ProductSalesList}"
                ItemTemplate="{StaticResource listSales}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>
        </Border>
    </Grid>
</Window>
